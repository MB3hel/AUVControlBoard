{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CBv1 via CMSIS-DAP",
            "cwd": "${workspaceFolder}",
            "svdFile": "./thirdparty/v1_generated/ATSAMD51G19A.svd",
            "executable": "./build/v1/Debug/ControlBoard.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "configFiles": [
                "tools/debug/cb_v1_via_cmsisdap.cfg"
            ]
        },
        {
            "name": "CBv2 via ST-LINK-v2",
            "cwd": "${workspaceFolder}",
            "svdFile": "./thirdparty/v2_generated/STM32F411.svd",
            "executable": "./build/v2/Debug/ControlBoard.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "configFiles": [
                "tools/debug/cb_v2_via_stlink2.cfg"
            ]
        },
        {
            "name": "SimCB Linux via GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/simcb-linux/Debug/SimCB",
            "args": ["5014"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "FreeRTOS stuff",
                    "text": "handle SIGUSR1 nostop noprint pass",
                    "ignoreFailures": false
                }
            ]
        },
        {
            "name": "SimCB macOS via LLDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/simcb-macos/Debug/SimCB",
            "args": ["5014"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "FreeRTOS stuff",
                    "text": "handle SIGUSR1 nostop noprint pass",
                    "ignoreFailures": false
                }
            ]
        },
    ]
}
